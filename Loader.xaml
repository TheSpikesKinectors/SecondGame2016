<Window x:Class="BucketGame.Loader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BucketGame"
        mc:Ignorable="d"
        Title="Loader"  Width="640" Height="480" SizeToContent="WidthAndHeight"
        Background="DarkBlue">
    <Grid Margin="0,0,0,0">
        <Image Source="imgs/logo.png" Width="640" Height="480"></Image>
        <TextBlock Text="Loading..." FontSize="42"
                   FontFamily="Impact,Alef,Arial" Foreground="White" Margin="0,383,10,10"
                   TextAlignment="Center" x:Name="excuse"/>
    </Grid> 
</Window>
